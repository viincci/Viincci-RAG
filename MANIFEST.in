# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include configuration files
recursive-include V4/config *.json
recursive-include V4/config .gitkeep
recursive-include V4/db .gitkeep

# Include test files
recursive-include tests *.py

# Include workflow files (optional)
recursive-include .github/workflows *.yml

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
global-exclude *.swp
global-exclude *.swo

# Exclude development files
exclude .gitignore
exclude .flake8
exclude pytest.ini
exclude tox.ini
